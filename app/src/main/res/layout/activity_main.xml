<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbarSize="0dp"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear6">
    <Button
        android:id="@+id/itt_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:drawableStart="@drawable/icon_image"
        android:drawableEnd="@drawable/icon_text"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:text="Image - Text"
        android:textAllCaps="false"
        android:textColor="#ed2a4a"
        android:textSize="20sp" />

    <Button
        android:id="@+id/tti_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:drawableStart="@drawable/icon_text"
        android:drawableEnd="@drawable/icon_image"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:text="Text - Image"
        android:textAllCaps="false"
        android:textColor="#ed2a4a"
        android:textSize="20sp" />

    <Button
        android:id="@+id/tts_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/et_bg"
        android:drawableStart="@drawable/icon_text"
        android:drawableEnd="@drawable/icon_speak"
        android:padding="10dp"
        android:text="Text - Speech"
        android:textAllCaps="false"
        android:textColor="#ed2a4a"
        android:textSize="20sp" />

    <Button
        android:id="@+id/stt_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:drawableStart="@drawable/icon_mic"
        android:drawableEnd="@drawable/icon_text"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:text="Speech - Text"
        android:textAllCaps="false"
        android:textColor="#ed2a4a"
        android:textSize="20sp" />

    <Button
        android:id="@+id/about_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_corner_button"
        android:drawableStart="@drawable/ic_people_outline_black_24dp"
        android:drawablePadding="15dp"
        android:padding="10dp"
        android:text="About ...."
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="25sp" />
</LinearLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear6"
        android:layout_marginTop="10dp"
        ads:adSize="BANNER"
        android:id="@+id/banner_main"
        ads:adUnitId="ca-app-pub-4064916316472596/4431136891"
        />
</RelativeLayout>
</ScrollView>